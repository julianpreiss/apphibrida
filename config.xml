<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0" 
        id="com.davinci.ejemplo" 
        version="0.1.0">
        
    <name>Cool Dolphins</name>

    <description>
        Ecommerce de partituras y lecciones de m√∫sica argentina
    </description>

    <author href="http://www.davinci.edu.ar" email="julian.preiss@davinci.edu.ar">
        Julian Preiss - Escuela Da Vinci
    </author>

    <platform name="ios" />
    <platform name="android" />
    <platform name="winphone" />

    <preference name="permissions" value="none" />

    <preference name="orientation" value="portrait" />

    <preference name="target-device" value="universal" />
    
    <preference name="fullscreen" value="false" />    

    <preference name="showSplashScreenSpinner" value="false" />
    
    <preference name="android-installLocation" value="auto" />

    <preference name="splashScreenDelay" value="6000" />
    
    <preference name="StatusBarBackgroundColor" value="#0000ff" />    
    

    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-statusbar" source="npm" />
    

    <icon src="res/icon/android/icon_ldpi.jpg" 
		gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/android/icon_mdpi.jpg" 
		gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/android/icon_hdpi.jpg" 
		gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/android/icon_xhdpi.jpg" 
		gap:platform="android" gap:density="xhdpi" />
    
    

    <gap:splash src="res/screen/android/screen_ldpi.jpg" 
		gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/screen_mdpi.jpg" 
		gap:platform="android" gap:density="mdpi" />
	<gap:splash src="res/screen/android/screen_hdpi.jpg" 
		gap:platform="android" gap:density="hdpi" />
	<gap:splash src="res/screen/android/screen_xhdpi.jpg" 
		gap:platform="android" gap:density="xhdpi" />
    

    <access />
    

    <plugin name="cordova-plugin-whitelist" version="1" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
